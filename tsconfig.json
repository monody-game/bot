{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "Node16",
    "lib": ["ES2021"],
    "module": "Node16",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2022",
    "sourceMap": true,

    "strict": true,
    "useUnknownInCatchVariables": false,
    "noEmitOnError": true,
    "noUncheckedIndexedAccess": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules"
  ]
}