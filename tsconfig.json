{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2022",
    "sourceMap": true,

    "strict": true,
    "noEmitOnError": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules"
  ]
}